<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <h1>Put it all together</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <h2 class="text-center">The <strong>Board</strong> of Beers and Dares</h2>
        <hr>

        <div class="col-lg-4">
          <h3>Beers</h3>
          <% @beers.each do |beer| %>
            <%= text_field_tag 'beers[]', beer, class: 'form-control' %>
          <% end %>
        </div>

        <div class="col-lg-4">
          <h3>Breweries</h3>
          <% @breweries.each do |brewery| %>
            <%= text_field_tag 'breweries[]', brewery, class: 'form-control' %>
          <% end %>
        </div>

        <div class="col-lg-4">
          <h3>Challenges</h3>
          <% @dares.each do |dare| %>
            <%= text_field_tag 'dares[]', dare, class: 'form-control' %>
          <% end %>
        </div>

        <div class="col-lg-12 text-center">
          <table id="game-board" class="table table-bordered">
            <tbody>
              <% @boxes.each_with_index do |box, idx| %>
                <% break if idx > 24 %>
                <% if idx % 5 == 0 %>
                  <tr>
                <% end %>
                    <td>
                      <%= box %>
                    </td>
                <% if idx % 5 == 4 %>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
